<Window x:Class="Graphics.CompetitionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Graphics"
        mc:Ignorable="d"
        Title="Competitie statistieken" Height="350" Width="350" ResizeMode="NoResize" Topmost="True">
    <Window.DataContext>
        <local:DataContext/>
    </Window.DataContext>
    <Grid>
        <Label Content="Competitie" HorizontalAlignment="Center" Margin="0,20,0,0" VerticalAlignment="Top" FontSize="24" HorizontalContentAlignment="Center" Width="188"/>
        <Label Content="{Binding Tracklist, Mode=OneWay}" HorizontalAlignment="Center" Margin="0,66,0,0" VerticalAlignment="Top" Height="93" Width="330"/>
        <Label Content="{Binding RacerPoints, Mode=OneWay}" HorizontalAlignment="Center" Margin="0,159,0,0" VerticalAlignment="Top" Height="165" Width="330"/>

    </Grid>
</Window>
